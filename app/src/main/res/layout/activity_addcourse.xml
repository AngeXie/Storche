<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.96"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4.0"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="添加课程"
                android:textColor="#999"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_add_return_course"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pic_return"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- split line-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="#3f51b5"></LinearLayout>

    <!-- input messages -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.19"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5.0"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- get course_name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="课名"
                    android:textSize="20dp"
                    android:textColor="@color/event_color_01"
                    android:gravity="bottom"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.0"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_height="match_parent">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_course_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入课名"
                        android:textColor="#7b7b7b"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- get course_spot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.44"
                    android:gravity="bottom"
                    android:text="地点"
                    android:textColor="@color/event_color_02"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.0"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_height="match_parent">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/course_spot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入上课地点"
                        android:textColor="#7b7b7b"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- show selected day and time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="节数"
                    android:textSize="20dp"
                    android:textColor="@color/event_color_03"
                    android:gravity="bottom"/>
                <TextView
                    android:id="@+id/tv_courseDT"
                    android:layout_width="0dp"
                    android:layout_weight="5.0"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textColor="#7b7b7b"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>
            <!-- get course_weeks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="周数"
                    android:textSize="20dp"
                    android:textColor="@color/event_color_04"
                    android:gravity="bottom"/>
                <TextView
                    android:id="@+id/dialog_courseWeeks"
                    android:layout_width="0dp"
                    android:layout_weight="5.0"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:hint="请选择上课周数"
                    android:textSize="18dp"
                    android:textColor="#d8d8d8"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:gravity="right">
        <com.shamanland.fab.FloatingActionButton
            android:id="@+id/addCourse_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/pic_forsure"
            android:elevation="8dp"
            app:floatingActionButtonColor="@color/event_color_02"
            app:floatingActionButtonImplicitElevation="false"
            />
    </LinearLayout>

</LinearLayout>