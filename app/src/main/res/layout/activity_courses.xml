<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- show time and tools-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/border">
        <com.gc.materialdesign.views.ButtonRectangle
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="#59dbe0"
            android:text="导入课程"/>
    </LinearLayout>

    <!-- show days-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="50dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="周一"
            android:textSize="15dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="周一"
            android:textSize="15dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="周一"
            android:textSize="15dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="周一"
            android:textSize="15dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="周一"
            android:textSize="15dp"
            android:background="@drawable/border"/>
    </LinearLayout>

    <!-- show course details-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.0"
        android:background="@drawable/border">
        <!-- show courseTime-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/border"/>
        </LinearLayout>
        <!-- show courses Details-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5.0"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border">
            <!-- Monday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/Monday_c1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="数据结构\n@1204"
                        android:gravity="center"
                        android:background="@color/event_color_01"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Monday_c2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Monday_c3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Monday_c4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
            </LinearLayout>
            <!-- Tuesday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/Tuesday_c1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Tuesday_c2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Tuesday_c3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:text="数据结构"
                        android:gravity="center"
                        android:background="@color/event_color_02"/></LinearLayout>
                <LinearLayout
                    android:id="@+id/Tuesday_c4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
            </LinearLayout>
            <!-- Wednesday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/Wednesday_c1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Wednesday_c2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Wednesday_c3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Wednesday_c4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
            </LinearLayout>
            <!-- Thursday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/Thursday_c1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Thursday_c2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border">
                    <com.gc.materialdesign.views.ButtonFloat
                        android:id="@+id/buttonFloat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/event_color_01"
                        android:visibility="invisible"/></LinearLayout>
                <LinearLayout
                    android:id="@+id/Thursday_c3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Thursday_c4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border">
                </LinearLayout>
            </LinearLayout>
            <!-- Friday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/Friday_c1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Friday_c2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Friday_c3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
                <LinearLayout
                    android:id="@+id/Friday_c4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/border"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--get some blank-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"></LinearLayout>

</LinearLayout>